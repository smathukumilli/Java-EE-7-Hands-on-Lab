<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>edu.iit.sat.itmd4515.smathukumilli.mp2.web.CustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllCustomers</servlet-name>
        <servlet-class>edu.iit.sat.itmd4515.smathukumilli.mp2.web.AllCustomers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCustomer</servlet-name>
        <servlet-class>edu.iit.sat.itmd4515.smathukumilli.mp2.web.GetCustomer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/CustomerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllCustomers</servlet-name>
        <url-pattern>/AllCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCustomer</servlet-name>
        <url-pattern>/GetCustomer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>customerinfo.jsp</welcome-file>
    </welcome-file-list>
</web-app>
